@model IEnumerable<WhereIsMyGame.WebApp.MVC.Models.FriendViewModel>
@using WhereIsMyGame.WebApp.MVC.Extensions

@{
    ViewData["Title"] = "My Friends";
}

<section>
    <div>
        <div class="container" style=" padding-top: 20px">
            <div class="row">
                <div class="col-lg-12">
                    <h3 class="one">My Friends</h3>
                    <a asp-controller="Friend" asp-action="AddFriend" class="btn btn-success float-right">
                        Add New
                    </a>
                </div>
            </div>
            <br />
            <div class="row">

                @{
                    if (Model.Any())
                    {
                        <table class="table table-bordered">
                            <thead>
                                <tr class="small text-uppercase">
                                    <th scope="col">Name</th>
                                    <th scope="col">Edit</th>
                                    <th scope="col">Delete</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.Name</td>
                                            <td>
                                                <a asp-controller="Friend" asp-action="EditFriend" 
                                                   asp-route-id="@item.Id" class="btn btn-info float-right">
                                                    Edit
                                                </a>
                                            </td>
                                            <td>
                                                <a asp-controller="Friend" asp-action="DeleteFriend"  asp-route-id="@item.Id" 
                                                    onclick="return confirm('Are you sure?')" class="btn btn-warning float-right">
                                                    Delete
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p>You don't have any friends in your records...</p>
                    }
                }
            </div>
        </div>
    </div>
</section>