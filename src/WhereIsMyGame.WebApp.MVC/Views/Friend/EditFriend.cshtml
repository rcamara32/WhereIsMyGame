@model WhereIsMyGame.WebApp.MVC.Models.FriendViewModel
@using WhereIsMyGame.WebApp.MVC.Extensions

@{
    ViewData["Title"] = "Edit Friend | " + Model.Name;
}

<section>
    <div>
        <div class="container" style=" padding-top: 20px">
            <div class="row">
                <div class="col-lg-12">
                    <h3 class="one">Model.Name</h3>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="EditFriend">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Update" class="btn btn-primary" />
                            <a class="btn btn-info" asp-action="Index">Back</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>