@model IEnumerable<WhereIsMyGame.WebApp.MVC.Models.GameViewModel>
@using WhereIsMyGame.WebApp.MVC.Extensions

@{
    ViewData["Title"] = "Detail";
}

<section>
    <div>
        <div class="container" style=" padding-top: 20px">            
            <div class="row">
                <div class="col-lg-12">
                    <h3 class="one">My Collection Games</h3>
                    <button class="btn btn-success float-right">Add New</button>
                </div>
            </div>
            <br />
            <div class="row">
                @{
                    foreach (var game in Model.OrderBy(p => p.Plataform.Name).ThenBy(c => c.Name))
                    {
                        <div class="col-md-3">

                            <div class="card" style="width: 18rem;">

                                <a asp-controller="Collection" asp-action="Detail" asp-route-id="@game.Id" class="img-wrap">
                                    <img src="~/images/@game.Image" alt="@game.Name">
                                </a>
                                <div class="card-body">
                                    <h5 class="card-title">@game.Name</h5>
                                    <p class="card-text">@game.Plataform.Name </p>
                                    @if (game.IsActive)
                                    {
                                        <p>Is Active</p>
                                    }
                                    else
                                    {
                                        <p>Is Inactive</p>
                                    }                                    
                                    <a asp-controller="Collection" asp-action="Details" asp-route-id="@game.Id" class="btn btn-primary"> <b> Details</b></a>
                                    |
                                    <a asp-controller="Collection" asp-action="Delete" class="btn btn-danger">Delete</a>
                                </div>
                            </div>

                        </div>
                    }
                }
            </div>
        </div>
    </div>
</section>