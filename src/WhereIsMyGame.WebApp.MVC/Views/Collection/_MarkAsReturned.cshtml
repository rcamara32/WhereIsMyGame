@model WhereIsMyGame.WebApp.MVC.Models.MarkReturnedDto

<div class="modal fade" id="modalReturned" tabindex="-1" role="dialog" aria-labelledby="modalReturnedLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalReturnedLabel">Mark Game as Returned</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="MarkAsReturned">
                    <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
                    
                    <input type="hidden" asp-for="GameId" />                    

                    <div class="form-group">
                        <label class="control-label">When this game was borrowed: </label>
                        <label class="control-label">@Model.LastDateLoan.Value.ToString("dd/MM/yyyy")</label>
                        <input type="hidden" asp-for="LastDateLoan" />
                    </div>
                    <div class="form-group">
                        <label asp-for="ReturnedDate"></label>
                        <input asp-for="ReturnedDate" class="form-control" type="date" />
                        <span asp-validation-for="ReturnedDate" class="text-danger"></span>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" data-save="modal" >Save</button>
            </div>
        </div>
    </div>
</div>